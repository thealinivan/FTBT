<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/ri_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_account1" />

    <TextView
        android:id="@+id/ri_fName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account First Name"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/ri_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ri_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Email"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/ri_fName"
        app:layout_constraintTop_toBottomOf="@+id/ri_fName"/>

    <EditText
        android:id="@+id/ri_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/edit_text"
        android:ems="10"
        android:textSize="15sp"
        android:inputType="textMultiLine"
        android:text="Review content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ri_email" />
</android.support.constraint.ConstraintLayout>